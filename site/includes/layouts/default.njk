<!doctype html>
<html class="h-full bg-light" lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{titles[page.fileSlug] }}</title>
        <meta name="description" content="{{general.site_description}}">
        <meta name="theme-color" content="#F5F5F5">
        {% include "components/meta-social.njk" %}
        {% include "components/meta-icons.njk" %}

        <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
        
        {% if fonts %}
            <link href="https://fonts.googleapis.com/css2?family={{fonts}}&display=swap" rel="stylesheet">  
        {% endif %}        
            <link rel="stylesheet" href="/main.css">
        {% if css %}
            {# TODO inline this #}
            <link rel="stylesheet" href="/{{css}}.css">
        {% endif %}
        {% if js %}
            {% set scriptPath %}/{{js}}.bundle.js{% endset %}
            <script src="{{scriptPath}}" defer="defer"></script>
        {% endif %}
        <link rel="canonical" href="{{ general.site_domain }}{{ page.url }}">
    </head>

    <body>
        <main id="main">{{ content | safe }}</main>
    </body>
</html>